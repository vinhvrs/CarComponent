<div class="container" style="background: white;">
    <div class="Tieu_de" style="margin-top: 10px;">
        <div>
            Current Orders
        </div>
    </div>

    <h3>Order Information</h3>
    <table class="table table-striped">
        <thead>
            <td>No.</td>
            <td>Recipient Name</td>
            <td>Address</td>
            <td>Phone</td>
            <td>Total Amount</td>
            <td>Purchase Date</td>
            <td>Notes</td>
            <td>Status</td>
            <td colspan="2">Actions</td>
        </thead>
        <% if(!dataDonHang[0]) { %>
            <tr>
                <td colspan="9" style="text-align: center;">No orders available !!!</td>
            </tr>
        <% } else { 
            dem = 0;
            dataDonHang.forEach((data) => { %>
                <tr>
                    <td><%= dem += 1 %></td>
                    <td><%= data.TenKH %></td>
                    <td><%= data.DiaChi %></td>
                    <td><%= data.SDT %></td>
                    <td><%= data.TongTien %> <sup>$</sup></td>
                    <td><%= data.NgayMua %></td>
                    <td><%= data.GhiChu %></td>
                    <td><%= data.TenTT %></td>
                    <td><a href="/customer/don-hang/chi-tiet/<%= data.ID %>" style="color: blue;">Details</a></td>
                    <td><a href="/customer/don-hang/huy/<%= data.ID %>" style="color: blue;">Cancel Order</a></td>
                </tr>
            <% })
        } %>
    </table>
</div>
